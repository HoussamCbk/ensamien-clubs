
<section class="upcomingevents" id="upcomingevents" aria-labelledby="upcomingevents-label">
  <div class="container">

    <div class="card upcomingevents-card">

      <div class="card-content">

        <h2 class="headline headline-2 section-title upcomingevents-title" id="upcomingevents-label">
          Upcoming events
        </h2>

        <p class="card-text">
          Don't miss out our future events !
        </p>

        <div class="btn-group">
          <button class="btn-icon" aria-label="previous" data-slider-prev>
            <ion-icon name="arrow-back" aria-hidden="true"></ion-icon>
          </button>

          <button class="btn-icon" aria-label="next" data-slider-next>
            <ion-icon name="arrow-forward" aria-hidden="true"></ion-icon>
